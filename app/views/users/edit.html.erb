<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@user.errors.count, "error") %>
        occurred:
      </h4>
   
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <p><%= f.label :username %>: 
    <%= f.text_field :username %></p>

    <p><%= f.label :display_name %>: 
    <%= f.text_field :display_name %></p>

    <p><%= f.label :email %>: 
    <%= f.text_field :email %></p>

    <p><%= f.label :profile %>: <br>
    <%= f.text_area(:profile, size: "50x15") %></p>

    <%= f.submit "Edit Profile" %>
<% end %>